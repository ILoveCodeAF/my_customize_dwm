Status() {
	# space
	echo ""

	# get wifi status
	if [ "$(nmcli general status | awk '/connected/{if(NR>0 && $1 == "connected"){print $1}}')" = 'connected' ]; then
		#nmcli dev wifi list | awk '/\*/{if (NR>0) {print $8}}' | sed -n "/â–‚/p"
		wifi="$(grep "^\s*w" /proc/net/wireless | awk '{print int($3 * 100 / 70)}')"
		if [ "$wifi" -ge 75 ]; then
			echo "â–‚â–„â–†â–ˆ"
		elif [ "$wifi" -ge 50 ]; then
			echo "â–‚â–„â–†_"
		elif [ "$wifi" -ge 25 ]; then
			echo "â–‚â–„__"
		else
			echo "â–‚___"
		fi
		echo "$delim"
	fi
#	nmcli dev wifi list | awk '/\*/{if (NR>0){print $7}}'
#	network
#	nmcli dev wifi list | grep '*'
#	echo "$(nmcli dev wifi list)" | awk '/\*/{if (NR>1){print $8}}'
#grep "^\s*w" /proc/net/wireless | awk '{ print "ï‡«", int($3 * 100 / 70) "%" }'
#sed "s/down//;s/up/ï‚¬/" /sys/class/net/e*/operstate
#	echo $wifi
#	echo $delim

#	echo "â–‚â–„â–†â–ˆ"

#	pactl list sinks | grep '^[[:space:]]Volume:' | head -n $(( $SINK + 1 )) | tail -n 1 | sed -e 's,.* \([0-9][0-9]%\).*,\1,'

	# get engine ibus
	engine="$(ibus engine)"
	if [ "$engine" = "xkb:us::eng" ]; then
		echo "en"
	elif [ "$engine" = "Unikey" ]; then
		echo "vi"
	else
		echo "ðŸ”„"
	fi

	echo "$delim"

	# get xbacklight
	backlight="$(printf '%0.f' "$(xbacklight -get)")"
	echo "ðŸŒŸ $backlight"
	echo "$delim"

	# get volume
#	volume="$(pactl list sinks | grep '^[[:space:]]Volume:' | head -n $(( $SINK + 1 )) | tail -n 1 | sed -e 's,.* \([0-9][0-9]\)%.*,\1,')"
	volume="$(pactl list sinks | grep '^[[:space:]]Volume:' | head -n $(( SINK + 1 )) | tail -n 1 | sed -e 's,.* \([0-9][0-9]*\)%.*,\1,')"
	if [ "$volume" -gt 50 ]; then
		volume="ðŸ”Š $volume%"
	elif [ "$volume" -gt 0 ]; then
		volume="ðŸ”‰ $volume%"
	else
		volume="ðŸ”ˆ $volume%"
	fi

	echo "$volume"
	echo "$delim"

	# get batery percent
	for x in /sys/class/power_supply/BAT?/capacity; do
		echo "ðŸš€ $(cat "$x")%"
	done
	echo "$delim"

#	date '+%d/%m/%Y %H:%M'
	date '+%a %b %d,%Y %H:%M'
}

update() {
	xsetroot -name "$(Status | tr '\n' ' ')" &
	wait
}

#	bar=`date +"%a %d/%m/%Y %H:%M"`
# statusbar loop
while true; do
	update	

	sleep 1m &
	wait
done
